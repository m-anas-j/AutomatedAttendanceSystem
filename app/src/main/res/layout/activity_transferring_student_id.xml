<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_background"
    tools:context=".TransferringStudentID">

    <TextView
        android:text="@string/transferringStudentID"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:layout_above="@+id/imageView4"
        android:layout_centerHorizontal="true" android:layout_marginBottom="39dp"
        android:id="@+id/transferringStudentId"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp" app:srcCompat="@drawable/nfc_icon_2"
        android:layout_centerVertical="true" android:layout_centerHorizontal="true" android:id="@+id/imageView4"/>

</RelativeLayout>