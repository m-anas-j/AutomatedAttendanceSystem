<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/test"
    tools:context="com.example.weisslogia.automatedattendancesystem.WelcomeScreen">

    <Button
        android:text="Button"
        android:onClick="onFacultyButtonClicked"
        android:background="@drawable/test"
        android:textColor="@drawable/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/facultyButton"
        android:layout_marginTop="193dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onStudentButtonClicked"
        android:background="@drawable/test"
        android:layout_below="@+id/facultyButton"
        android:layout_alignEnd="@+id/facultyButton"
        android:layout_marginTop="36dp"
        android:id="@+id/studentButton"/>

    <EditText
        android:id="@+id/editText"
        android:hint="heuheu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="113dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

</RelativeLayout>