<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_background"
    tools:context=".WaitingForStudentID">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp" app:srcCompat="@drawable/nfc_icon_1"
        android:id="@+id/imageView2" android:layout_centerVertical="true" android:layout_centerHorizontal="true"/>
    <TextView
        android:text="@string/touchPhoneToReceiver"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:layout_above="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="42dp"
        android:id="@+id/touchPhoneToReceiver"/>

</RelativeLayout>