<?xml version="1.0" encoding="utf-8"?>
<selector
        xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                    android:endColor="#1a237e"
                    android:startColor="#3f51b5"
                    android:angle="270" />
            <stroke
                    android:width="3dp"
                    android:color="#37474f" />
            <corners
                    android:radius="3dp" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                    android:endColor="#311b92"
                    android:startColor="#5e35b1"
                    android:angle="270" />
            <stroke
                    android:width="3dp"
                    android:color="#37474f" />
            <corners
                    android:radius="3dp" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                    android:endColor="#c2185b"
                    android:startColor="#5e35b1"
                    android:angle="270" />
            <stroke
                    android:width="0dp"
                    android:color="#37474f" />
            <corners
                    android:radius="0dp" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>
</selector>